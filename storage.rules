rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Musician profile photos
    match /musician-profiles/{fileName} {
      // Allow authenticated users to upload photos with their user ID in the filename
      allow write: if request.auth != null 
        && fileName.matches('profile_' + request.auth.uid + '_.*');
      
      // Allow public read access to profile photos
      allow read: if true;
    }
    
    // Event posters - Only admins can upload
    match /event-posters/{fileName} {
      // Allow admins to upload event posters
      allow write: if request.auth != null 
        && (request.auth.token.role == 'beam_admin' || request.auth.token.beam_admin == true);
      
      // Allow public read access to event posters
      allow read: if true;
    }

    // Publishing application uploads
    match /publishing-applications/{userId}/{fileName} {
      // Allow authenticated users to upload their own publishing materials
      allow write: if request.auth != null
        && request.auth.uid == userId
        && (
          request.resource.contentType.matches('audio/.*') ||
          request.resource.contentType == 'application/pdf'
        );

      // Allow users to read their own files and admins to read all
      allow read: if request.auth != null
        && (
          request.auth.uid == userId ||
          request.auth.token.role == 'beam_admin' ||
          request.auth.token.beam_admin == true
        );
    }
    
    // Default deny rule for any unmatched paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
